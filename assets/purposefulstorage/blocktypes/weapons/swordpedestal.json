		  }
    }
  },
  "collisionSelectionBoxes": [ 
    { "x1": 0.05, "y1": 0, "z1": 0.05, "x2": 0.95, "y2": 0.5, "z2": 0.95, "rotateYByType": { "*-north": 90, "*-east": 0, "*-west": 180, "*-south": 270 } }
  ]
