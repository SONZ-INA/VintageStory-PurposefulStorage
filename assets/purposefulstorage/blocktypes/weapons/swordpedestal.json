    "*-normal-*": {
      "burnTemperature": 700,
      "burnDuration": 40
    }
  },
  "guiTransform": {
    "origin": { "x": 0.5, "y": 0.3, "z": 0.5 },
    "scale": 1.3
  },
  "tpHandTransform": {
	  "translation": { "x": -1, "y": -0.68, "z": -0.45 },
	  "rotation": { "x": 90, "y": 0, "z": 0 },
	  "scale": 0.5
